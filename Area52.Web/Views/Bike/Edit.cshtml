@model Bike

<h1>Edit Bike</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BikeId" />

    <div>
        <label asp-for="Type"></label>
        <input asp-for="Type" />
        <span asp-validation-for="Type"></span>
    </div>

    <div>
        <label asp-for="DayPrice"></label>
        <input asp-for="DayPrice" type="number" step="0.01" />
        <span asp-validation-for="DayPrice"></span>
    </div>

    <div>
        <label asp-for="PurchaseDate"></label>
        <input asp-for="PurchaseDate" type="date" />
        <span asp-validation-for="PurchaseDate"></span>
    </div>

    <button type="submit">Save changes</button>
</form>

<p>
    <a asp-action="Index">Back to list</a>
</p>
